// -- VARIANTS - Used to decide which event to run
// UI : -- Variant 1
// OVERWORLD : -- Variant 2
// MOON : -- Variant 3
//
// -- EVENTS --
// launch_overworld_controller - Takes the user to the overworld
// launch_moon_controller - Takes the user to the moon
//
// -- TIERS --
// TIER 1 - unlocked by default
// TIER 2 - Mark Variant 1 +
//
{
  "format_version": "1.16.220",
  "minecraft:entity": {
    "description": {
      "identifier": "cosmo:rocket",
      "is_spawnable": true,
      "is_summonable": true,
      "animations": {
        "rocket_ui": "animation.rocket_ui",
        "rocket_ui_tier_2": "animation.rocket_ui_tier_2"
      },
      "scripts": {
        "animate": [
          {
            "rocket_ui": "query.is_saddled && q.has_rider && !q.variant && q.mark_variant == 1"
          },
          {
            "rocket_ui_tier_2": "query.is_saddled && q.has_rider && !q.variant && q.mark_variant == 2"
          }
        ]
      }
    },
    "component_groups": {
      "has_fuel": {
        "minecraft:is_saddled": {}
      },
      "variant_ui": {
        "minecraft:variant": {
          "value": 1
        }
      },
      "tier_2": {
        "minecraft:mark_variant": {
          "value": 2
        }
      }
    },
    "components": {
      "minecraft:mark_variant": { // A default value overwrite it to increase the level of the rocket!
        "value": 1
      },
      "minecraft:physics": {
        "has_collision": true,
        "has_gravity": true
      },
      "minecraft:health": {
        "value": 1
      },
      "minecraft:collision_box": {
        "height": 2,
        "width": 1
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/rocket.json"
      },
      "minecraft:inventory": {
        "inventory_size": 2,
        "container_type": "horse"
      },
      "minecraft:npc": {},
      "minecraft:equippable": {
        "slots": [
          {
            "slot": 0,
            "item": "cosmo:fuel_tank",
            "accepted_items": [
              "cosmo:fuel_tank"
            ],
            "on_equip": {
              "event": "fuel_rocket"
            }
          },
          {
            "slot": 1,
            "item": "cosmo:tier_2_upgrade",
            "accepted_items": [
              "cosmo:tier_2_upgrade"
            ],
            "on_equip": {
              "event": "upgrade_rocket"
            }
          }
        ]
      },
      "minecraft:rideable": {
        "controlling_seat": 1,
        "interact_text": "Enter Rocket",
        "seats": [
          {
            "position": [
              0,
              0.4,
              0
            ]
          }
        ]
      },
      "cosmo:rocket_launch_controller": {
        "planets": [
          {
            "name": "overworld",
            "tier": 1
          },
          {
            "name": "moon",
            "tier": 1
          },
          {
            "name": "mars",
            "tier": 2
          }
        ]
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "fall",
          "deals_damage": false
        }
      }
    },
    "events": {
      // UI
      "open_ui": {
        "run_command": {
          "command": [
            "tag @s add ui"
          ]
        }
      },
      "close_ui": {
        "run_command": {
          "command": [
            "tag @s remove ui"
          ]
        }
      },
      // UPGRADES
      "fuel_rocket": {
        "add": {
          "component_groups": [
            "has_fuel"
          ]
        }
      },
      "upgrade_rocket": {
        "add": {
          "component_groups": [
            "tier_2"
          ]
        }
      }
    }
  }
}