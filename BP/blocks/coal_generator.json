{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "cosmo:coal_generator",
			"properties": {
				"cosmo:active": [
					0,
					1
				]
			}
		},
		"permutations": [
			{
				"condition": "q.block_property('cosmo:active') == 1",
				"components": {
					"minecraft:block_light_emission": 1,
					"minecraft:ticking": {
						"range": [
							20,
							20
						],
						"looping": false,
						"on_tick": {
							"event": "cosmo:deactivate"
						}
					},
					"tag:active_power_source": {}
				}
			},
			{
				"condition": "q.block_property('cosmo:active') == 0",
				"components": {
					"minecraft:block_light_emission": 0
				}
			}
		],
		"components": {
			"minecraft:unit_cube": {},
			"minecraft:material_instances": {
				"*": {
					"texture": "cosmo_coal_generator",
					"render_method": "opaque"
				}
			},
			"minecraft:on_interact": {
				"event": "cosmo:interaction",
				"condition": "query.get_equipped_item_name == 'coal'"
			}
		},
		"events": {
			"cosmo:interaction": {
				"set_block_property": {
					"cosmo:active": 1
				},
				"decrement_stack": {}
			},
			"cosmo:deactivate": {
				"set_block_property": {
					"cosmo:active": 0
				}
			}
		}
	}
}